<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rl_pickers_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/picker_height"
    android:background="@drawable/rectangle_corners">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/fl_click_numberpicker_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/picker_height"
            android:layout_weight="3"/>

        <RelativeLayout
            android:id="@+id/center_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/center_background"
            android:layout_weight="4">

            <EditText
                android:id="@+id/tv_value_numberpicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl_click_numberpicker_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/picker_height"
            android:layout_weight="3"/>
    </LinearLayout>

</LinearLayout>